---
import type { Product } from '@data/products';

export interface Props {
  product: Product;
}

const { product } = Astro.props;
---

<article class="card p-4 md:p-5 group">
  <!-- Image placeholder with gradient -->
  <div class="relative aspect-square rounded-xl bg-gradient-to-br from-accent/20 via-secondary/10 to-cute-accent/20 mb-4 overflow-hidden">
    <!-- Decorative pattern -->
    <div class="absolute inset-0 flex items-center justify-center">
      <svg class="w-16 h-16 text-primary/20 group-hover:scale-110 transition-transform duration-300" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
        <circle cx="12" cy="12" r="5" />
      </svg>
    </div>
    
    <!-- Badges -->
    <div class="absolute top-2 left-2 flex flex-col gap-1">
      {product.isBestSeller && (
        <span class="px-2 py-1 bg-accent text-primary text-xs font-semibold rounded-full">
          ขายดี
        </span>
      )}
      {product.isNew && (
        <span class="px-2 py-1 bg-cute-accent text-white text-xs font-semibold rounded-full">
          ใหม่
        </span>
      )}
    </div>
  </div>

  <!-- Content -->
  <div class="space-y-2">
    <div class="flex items-start justify-between gap-2">
      <div>
        <h3 class="font-semibold text-primary group-hover:text-secondary transition-colors">
          {product.name}
        </h3>
        {product.nameEn && (
          <p class="text-xs text-gray-400">{product.nameEn}</p>
        )}
      </div>
      <div class="text-right shrink-0">
        <span class="font-bold text-secondary">{product.price}</span>
        <span class="text-xs text-gray-500">/{product.priceUnit}</span>
      </div>
    </div>

    <p class="text-sm text-gray-500 line-clamp-2">
      {product.description}
    </p>

    <!-- Tags -->
    <div class="flex flex-wrap gap-1 pt-1">
      {product.tags.slice(0, 2).map((tag) => (
        <span class="px-2 py-0.5 bg-primary/5 text-primary/70 text-xs rounded-full">
          {tag}
        </span>
      ))}
    </div>
  </div>
</article>
