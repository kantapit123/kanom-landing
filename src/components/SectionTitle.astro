---
export interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center';
}

const { title, subtitle, align = 'center' } = Astro.props;
---

<div class={`mb-10 md:mb-14 ${align === 'center' ? 'text-center' : 'text-left'}`}>
  <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-primary mb-3">
    {title}
  </h2>
  {subtitle && (
    <p class="text-gray-500 text-base md:text-lg max-w-2xl mx-auto">
      {subtitle}
    </p>
  )}
  <div class={`mt-4 flex items-center gap-2 ${align === 'center' ? 'justify-center' : 'justify-start'}`}>
    <span class="w-12 h-1 bg-secondary rounded-full"></span>
    <span class="w-3 h-3 bg-accent rounded-full"></span>
    <span class="w-2 h-2 bg-cute-accent rounded-full"></span>
  </div>
</div>
